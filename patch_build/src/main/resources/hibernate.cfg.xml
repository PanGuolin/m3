<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.username">patchbuild</property>
        <property name="hibernate.connection.password">patchbuild</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/patch_build?generateSimpleParameterMetadata=true</property>
        <property name="format_sql">false</property>
		<property name="show_sql">false</property>
        <mapping resource="patch_build.hbm.xml"/>
        <mapping class="com.m3.patchbuild.info.BuildBranch" />
        <mapping class="com.m3.patchbuild.info.User" />
        <mapping class="com.m3.patchbuild.info.SVNLog" />
    </session-factory>
</hibernate-configuration>